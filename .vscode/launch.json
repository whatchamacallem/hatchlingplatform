{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
			"type": "cppdbg",
			"request": "launch",
            "program": "${workspaceFolder}/bin/hxtest",
            "args": ["help", "printhashes", "runtests"],
			"stopAtEntry": false,
            "cwd": "${workspaceFolder}/bin",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
            "logging": {
//				"engineLogging": true,
//				"moduleLoad": true,
//				"trace": true,
//				"programOutput": true
            },
            "setupCommands": [
                {
                    "description": "Enable pretty printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": false
                },
                {
                    "description": "Load custom printers",
                    "text": "source ${workspaceFolder}/src/hxarray_printer.py"
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
